<style lang="scss">
  @import "../styles/settings";

  .header {
    width: 100%;

    &__content {
      position: relative;
      display: flex;
      align-items: center;

      @include des {
        width: d(1200);
        height: d(145);
        justify-content: space-between;
        margin: 0 auto;
        padding-bottom: d(20);
      }

      @include mob {
        width: 100%;
        height: 70px;
        justify-content: center;
      }

      &::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        border-color: #e0dbdb;
        border-style: solid;

        @include des {
          border-width: d(.5);
          bottom: d(36);
        }

        @include mob {
          display: none;
        }
      }
    }

    &__logo {
      position: relative;

      @include des {
        width: d(218);
        height: d(35);
        flex: 0 0 d(218);
      }

      @include mob {
        width: 158px;
        height: 25px;
        flex: 0 0 158px;
      }

      & img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    &__nav {
      display: flex;
      align-items: center;

      @include des {
        grid-gap: d(20);
      }

      @include mob {
        display: none;
      }

      & a {
        color: #171515;
        font-weight: 5;
        transition: color .3s ease 0s;

        @include des {
          font-size: d(15);
          letter-spacing: d(-0.7);
        }

        @include mob {
        }

        &:hover {
          color: #898787;
        }
      }
    }

    &__open-nav {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      cursor: pointer;
      transition: opacity .3s ease 0s;

      @include des {
        width: d(40);
        height: d(20);
        flex: 0 0 d(40);
        align-items: flex-end;
      }

      @include mob {
        position: absolute;
        top: 50%;
        left: m(10);
        transform: translateY(-50%);
        width: 34px;
        height: 18px;
        align-items: flex-start;
      }

      &:hover {
        opacity: .5;
      }

      & span {
        width: 100%;
        background-color: #da3d2b;

        @include des {
          height: d(2);
          border-radius: d(100);

          &:last-of-type {
            width: 50%;
          }
        }

        @include mob {
          height: 2px;
          border-radius: 100px;

          &:first-of-type {
            width: 50%;
          }
        }
      }
    }
  }

  .nav {
    position: fixed;
    top: 0;
    right: 0;
    height: 100%;
    z-index: 99;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: transform .5s ease 0s;
    pointer-events: none;

    &.active {
      transform: none;
      pointer-events: auto;

      &::after {
        opacity: .5;
      }
    }

    @include des {
      width: d(270);
      padding: d(48) d(40) d(38);
      transform: translateX(d(270));
    }

    @include mob {
      width: 300px;
      padding: 42px 25px 25px;
      transform: translate(300px);
    }

    &::after {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 100vw;
      height: 100vh;
      background-color: #1e1c1b;
      z-index: -1;      
      opacity: 0;
      transition: opacity .5s ease 0s;

      @include des {
        transform: translateX(d(-270));
      }

      @include mob {
        transform: translate(-300px);
      }
    }

    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: #ea4f3e;
    }

    &__close {
      position: absolute;
      cursor: pointer;
      transition: opacity .3s ease 0s;

      &:hover {
        opacity: .5;

        & span {
          width: 90%;
        }
      }

      @include des {
        top: d(15);
        right: d(15);
        width: d(24);
        height: d(24);
      }

      @include mob {
        top: 15px;
        right: 15px;
        width: 24px;
        height: 24px;
      }

      & span {
        position: absolute;
        top: 50%;
        left: 50%;
        background-color: #fff;
        width: 100%;
        transition: width .3s ease 0s;

        @include des {
          border-radius: d(100);
          height: d(2);
        }

        @include mob {
          border-radius: 100px;
          height: 2px;
        }

        &:first-of-type {
          transform: translate(-50%, -50%) rotate(45deg);
        }

        &:last-of-type {
          transform: translate(-50%, -50%) rotate(-45deg);
        }
      }
    }

    &__body {
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      z-index: 2;

      @include des {
        grid-gap: d(15);
      }

      @include mob {
        grid-gap: 15px;
      }

      & a {
        color: #f2f2f2;
        cursor: pointer;
        transition: opacity .3s ease 0s;

        &:hover {
          opacity: .5;
        }

        @include des {
          font-size: d(15.5);
        }

        @include mob {
          font-size: 18px;
        }
      }
    }

    &__info {
      position: relative;
      color: #f2f2f2;
      line-height: 1.55;
      z-index: 2;

      @include des {
        font-size: d(13.5);
        margin-bottom: d(24);
      }

      @include mob {
        font-size: 15px;
        margin-bottom: 24px;
      }
    }

    &__socials {
      display: flex;
      align-items: center;

      @include des {
        grid-gap: d(10);
      }

      @include mob {
        grid-gap: 10px;
      }

      & a {
        position: relative;
        cursor: pointer;
        transition: opacity .3s ease 0s;

        @include des {
          width: d(30);
          height: d(30);
          flex: 0 0 d(30);
        }

        @include mob {
          width: 30px;
          height: 30px;
          flex: 0 0 30px;
        }

        &:hover {
          opacity: .5;
        }

        & svg {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
        }
      }
    }
  }
</style>
<script>
  const nav = document.querySelector('[data-nav]');
  const openNav = document.querySelector('[data-open-nav]');
  const closeNav = document.querySelector('[data-close-nav]');

  openNav && openNav.addEventListener('click', () => {
    nav && nav.classList.toggle('active');
  })

  closeNav && closeNav.addEventListener('click', () => {
    nav && nav.classList.toggle('active');
  })
</script>