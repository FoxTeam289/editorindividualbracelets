---
const { title } = Astro.props;

import Header from "../components/Header";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --fonts-sz-default: 16px;
    --fonts-weight-default: 400;
    --line-heigh-default: 1;

    --font-default: sans-serif;
    --font-montserrat: "Montserrat", var(--font-default);

    --color-white: rgba(245, 245, 245, 1);
    --color-black: rgba(4, 18, 10, 1);
    --color-transparent: rgba(0, 0, 0, 0);
    --color-equator: rgba(221, 185, 98, 1);
    --color-cactus: rgba(92, 105, 84, 1);
    --color-maire: rgba(36, 28, 5, 1);
    --color-hint-of-green: rgba(226, 232, 223, 1);
    --color-zambezi: rgba(93, 93, 93, 1);
    --color-floral-white: rgba(248, 245, 239, 1);
    --color-gainsboro: rgba(217, 217, 217, 1);
    --color-roti: rgba(194, 156, 64, 1);
    --color-suva-grey: rgba(139, 139, 139, 1);
    --color-mikado: rgba(69, 53, 8, 1);
  }

  #rec648517381,
  .t762 {
    position: fixed !important;
    top: 0 !important;
    right: 0 !important;
    z-index: 999 !important;
    display: none !important;
    opacity: 0 !important;
    visibility: hidden !important;
    pointer-events: none !important;
  }

  * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    border: 0;
    border: none;
    outline: none !important;
  }
  html,
  body {
    width: 100%;
    height: 100%;
    font-size: var(--fonts-sz-default);
    font-weight: var(--fonts-weight-default);
    line-height: var(--line-heigh-default);
    font-family: var(--font-montserrat);
    user-select: none;
    overflow-x: hidden;
  }

  body {
    position: relative;
    background-color: var(--color-white);
    color: var(--color-black);
  }

  main {
    min-height: 100vh;
    background-color: inherit;
  }

  a {
    color: inherit;
    text-decoration: none;
    /* -webkit-tap-highlight-color: rgba(0, 0, 0, 0); */
  }

  button {
    font-family: var(--font-playfair-display);
  }

  ul,
  ol,
  li {
    list-style-type: none;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-size: inherit;
    font-weight: inherit;
  }

  img {
    object-fit: cover;
  }
</style>
